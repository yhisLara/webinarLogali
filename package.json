{
    "name": "prodwb",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/xsenv": "^4.0.0",
        "@sap/xssec": "^3",
        "express": "^4",
        "hdb": "^0.19.6",
        "passport": "^0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/ux-specification": "^1.108.14",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-prodrep": "cds watch --open prodrep/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy prodwb --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive"
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sqlite",
                "credentials": {
                    "database": "db/ProductsDDBB"
                }
            }
        }
    }
}